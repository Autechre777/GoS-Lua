require('Inspired')

Menu = scriptConfig("Diana", "Moonwalker")
Menu.addParam("useQ", "Use Q in combo", SCRIPT_PARAM_ONOFF, true)
Menu.addParam("useW", "Use W in combo", SCRIPT_PARAM_ONOFF, true)
Menu.addParam("useE", "Use E in combo", SCRIPT_PARAM_ONOFF, true)
Menu.addParam("useR", "Use R in combo", SCRIPT_PARAM_ONOFF, true)
--Menu.addParam("ksR", "Use R to killsteal", SCRIPT_PARAM_ONOFF, true)
Menu.addParam("combo", "Combo", SCRIPT_PARAM_KEYDOWN, string.byte(" "))

Menu.addParam("useqtom", "Use Q to mouse position", SCRIPT_PARAM_KEYDOWN, string.byte("a"))

myHeroPos = GetOrigin(myHero)
local target = GetCurrentTarget()
mymouse = GetMousePos();

	if Menu.useqtom then
		mymouse = GetMousePos();
		if CanUseSpell(myHero,_Q) == READY then
			CastSkillShot(_Q,mymouse.x,mymouse.y,mymouse.z)
		end
	end

OnLoop(function(myHero) --RQ-Combo



		if Menu.combo then

	    	if CanUseSpell(myHero, _R) == READY and CanUseSpell(myHero, _Q) == READY and Menu.useR then --QR Combo

				if ValidTarget(target, GetCastRange(myHero, _R)) then
					CastTargetSpell(target,_R)
					QPred = GetPredictionForPlayer(myHeroPos, target, GetMoveSpeed(target), 1600, 250, GetCastRange(myHero, _Q), 150, false, true) -- Q Pred
						if QPred.HitChance == 1 and CanUseSpell(myHero, _Q) == READY and Menu.useQ then -- Cast Q Broken?
							CastSkillShot(_Q, QPred.PredPos.x, QPred.PredPos.y, QPred.PredPos.z)
						end
				end
			end
							if ValidTarget(target, 200) and Menu.useW then -- Fixed W - Working 2.0 (range added)
								CastSpell(_W)
							end
								if ValidTarget(target, >=150 or <=250) and Menu.useE then -- Fixed E 2.0 (Range Logic)
									CastSpell(_E)
								end
		end
	end)
